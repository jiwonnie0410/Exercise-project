<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="trouble">
	
	<!-- 01. 게시글 전체 목록 조회 및 검색조회까지 -->
	<select id="listAll" resultType="trouble">
		<!-- 페이지 나누기를 포함한 게시글 목록 -->
		<!-- 페이징 -->
		<include refid="pagingHeader"></include>
			SELECT
          			 TR_NUM,
          			t.M_ID,
          			 TR_MID, 
          			 get_code_name(TR_REASON_CD) tr_reason_cd ,
          			 TR_DTTM
       		FROM TROUBLE t, 
				MEMBERS m
				
				<!-- 검색조건 -->
			<include refid="search"></include>
			ORDER BY TR_NUM DESC, 
					 TR_DTTM DESC
		<!-- 페이징 -->
		<include refid="pagingFooter"></include>	
	</select>
	
	
	<!--03. 게시글 상세보기 조회 -->   
	<select id="view" resultType="trouble">
		<!-- SELECT * FROM AD_BOARD  -->
		SELECT
     		TR_NUM,
     		t.M_ID,
     		t.TR_MID, 
     		TR_REASON_CD,
     		TR_DTTM
		FROM 
			TROUBLE t, 
			MEMBERS m
		WHERE 
			t.m_id  = m.m_id
		AND 
			TR_NUM = #{tr_num}
	</select>
	
	<!-- 06. 게시글 삭제처리 -->
	<!-- 게시물을 삭제처리하지 않고, 삭제의 유무 상태만 변경 -->
	 <delete id="deleteArticle">
		DELETE FROM TROUBLE
		WHERE TR_NUM = #{tr_num}
	</delete>
	<!-- sql code 조각 -->
	<!-- 반복되는 sql의 일부를 sql태그를 이용하여 따로 빼둘수 있다. -->
	<!-- 검색 조건 sql -->
	<sql id="search">
	WHERE 
		t.m_id  = m.m_id
		<choose>
			<!-- 검색옵션이 전체 검색일 경우 -->
			<when test="searchOption == 'all' ">
				AND	
					(m.m_id like '%' || #{keyword} || '%'
				OR 
					tr_reason_cd like '%' || #{keyword}|| '%'
				OR 
					tr_mid like '%' || #{keyword} || '%')
			</when>
			<!-- 전체 검색이 아닐 경우 -->
			<otherwise>
				<if test="keyword != null and keyword != '' ">
				
				<if test="searchOption=='m_id' ">
					and m.M_ID like '%' || #{keyword} || '%'
				</if>
				
				<if test="searchOption=='tr_reason_cd' ">
					and tr_reason_cd like '%' || #{keyword} || '%'
				</if>
				
				<if test="searchOption =='tr_mid' ">
					and tr_mid like '%' || #{keyword} || '%'
				</if>
				
				</if>
			</otherwise>
		</choose>
	</sql>
	
	
	
	<!-- 페이징 sql -->
	<sql id="pagingHeader">
		SELECT * FROM (
			SELECT ROWNUM AS rn, A.* FROM (
	</sql>
	<sql id="pagingFooter">
			) A
		) WHERE rn BETWEEN #{start} AND #{end}
	</sql>
	
	
</mapper>














